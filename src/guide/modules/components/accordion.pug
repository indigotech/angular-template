                  .lst-item-table
                    input(type="checkbox", id="product4", value="4")
                    label.input-value(for="product4") Accordion checkbox item
                li.lst-item
                  .lst-item-table
                    input(type="checkbox", id="product5", value="5")
                    label.input-value(for="product5") Accordion checkbox item
                li.lst-item
                  .lst-item-table
                    input(type="checkbox", id="product6", value="6")
                    label.input-value(for="product6") Accordion checkbox item
                li.lst-item
                  .lst-item-table
                    input(type="checkbox", id="product7", value="7")
                    label.input-value(for="product7") Accordion checkbox item

