$orbit-nav-control-height = 20px
$orbit-gestures-side-width = 40px

.orbit-container
  position: relative
  width: 100%
  make-components-margin(top, $space-xsmall)
  make-components-margin(bottom, $space-xsmall)
  background-color: $color-gray-xlight
  overflow: hidden

.orbit
  width: auto
  white-space: nowrap
  perspective(1000)
  backface-visibility(hidden)

.orbit-item
  display: inline-block
  width: 100%
  vertical-align: middle

  // &.is-active // style active items

.orbit-gestures
  position: absolute
  top: 0
  bottom: 0
  z-index: 2
  width: $orbit-gestures-side-width

  &.left
    left: 0

    &:hover
      background: -moz-linear-gradient(right, $color-transparent 0, $color-mask-highlight-dark 100%)
      background: -webkit-linear-gradient(right, $color-transparent 0, $color-mask-highlight-dark 100%)
      background: linear-gradient(to left, $color-transparent 0, $color-mask-highlight-dark 100%)

  &.right
    right: 0

    &:hover
      background: -moz-linear-gradient(left, $color-transparent 0, $color-mask-highlight-dark 100%)
      background: -webkit-linear-gradient(left, $color-transparent 0, $color-mask-highlight-dark 100%)
      background: linear-gradient(to right, $color-transparent 0, $color-mask-highlight-dark 100%)

  .orbit-arrow
    position: absolute
    top: 50%
    left: 50%
    transform(translate(-50%, -50%))

.orbit-item-text
  white-space: normal

.orbit-page-control
  display: inline-block
  height: $orbit-nav-control-height
  make-components-margin(bottom, $space-xsmall)
  padding: 0 $spacement-xsmall
  background-color: $color-gray-xlight
  border-radius: ($orbit-nav-control-height / 2)

.orbit-page-control-bullet
  display: inline
  padding-right: $spacement-xsmall
  font-size: 9px
  line-height: $orbit-nav-control-height
  color: $color-gray-light

  &:last-of-type
    padding-right: 0

  &.is-active
    color: $color-primary

.orbit-thumbnail
  width: 100%
  text-align: right

.orbit-thumbnail-item
  position: relative
  display: inline-block
  width: 19.2%
  make-components-margin(bottom, $space-small)
  background-color: $color-gray-xlight
  opacity: 0.5
  transition(all $animation-duration ease-out)

  &:hover,
  &.is-active
    opacity: 1

  &.is-active
    .orbit-thumbnail-progress-fill
      width: 100%

  + .orbit-thumbnail-item
    margin-left: 1%

.orbit-thumbnail-progress
  position: absolute
  top: 100%
  left: 0
  z-index: 1
  width: 100%
  height: 2px
  make-components-margin(top, $space-xsmall)
  background-color: $color-gray-xlight

.orbit-thumbnail-progress-fill
  position: absolute
  top: 0
  left: 0
  z-index: 2
  width: 0
  height: 100%
  background-color: $color-accessory
