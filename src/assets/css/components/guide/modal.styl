.modal-container
  position: fixed
  top: 0
  right: 0
  bottom: 0
  left: 0
  z-index: 8
  overflow-x: hidden
  overflow-y: auto

.modal-content
  position: relative
  z-index: 10
  width: 90%
  margin: 80px auto
  background-color: white
  border-radius: $default-border-radius
  overflow-x: hidden
  overflow-y: auto
  transition(all $animation-duration ease-out)

  @media(min-width $screen-sm-min)
    width: 60%
    max-width: 500px

.modal-close
  position: absolute
  top: 0
  right: 0
  z-index: 2
  padding: $half-gutter
  text-align: center
  color: $color-gray-dark

.overlay__modal
  position: fixed

.modal
  opacity: 0
  visibility: hidden

  &.is-open
    opacity: 1
    visibility: visible

    .overlay
      z-index: 9
      opacity: $overlay-opacity
      visibility: visible


