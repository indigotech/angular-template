$checkout-progress-bullet-size = 40px
$checkout-progress-bullet-size-half = $checkout-progress-bullet-size / 2

.progress
  make-components-margin(bottom, $space-xsmall)

.progress-item
  display: inline-block
  width: 33.333%
  font-size: 0
  text-align: center

  + .progress-item:before
    position: relative
    top: $checkout-progress-bullet-size-half
    left: -50%
    z-index: 0
    display: inline-block
    width: 100%
    height: 2px
    background-color: $color-gray-light
    content: ''

  &.active
    .progress-item-bullet
      background-color: $color-primary
    .progress-title
      color: $color-primary

.progress-title
  margin: 0
  margin-top: 5px
  color: $color-gray

.progress-item-bullet
  position: relative
  z-index: 1
  display: inline-block
  width: $checkout-progress-bullet-size
  height: $checkout-progress-bullet-size
  font-size: $checkout-progress-bullet-size-half
  line-height: ($checkout-progress-bullet-size - 1)
  background-color: $color-gray-light
  border-radius: 50%
  color: $color-white

.progress-item-bullet-icon
  font-size: 16px

.progress-item-success
  position: absolute
  right: 0
  bottom: 0
  width: ($checkout-progress-bullet-size-half - 2)
  height: ($checkout-progress-bullet-size-half - 2)
  background-color: $color-success
  border-radius: 50%

  &:before
    position: absolute
    top: 3px
    left: 3px
    @extend .fa
    font-size: 12px
    color: $color-white
    content: $fa-check
