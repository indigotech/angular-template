.form-inline
  display: table
  width: 100%

.form-inline-input
  display: table-cell
  width: 100%
  height: 100%
  vertical-align: middle

  input[type="text"] // @stylint ignore
    height: 100%
    border-right: 0
    border-top-right-radius: 0
    border-bottom-right-radius: 0

.form-inline-button
  display: table-cell
  text-align: right
  vertical-align: middle

  .btn
    border-top-left-radius: 0
    border-bottom-left-radius: 0
