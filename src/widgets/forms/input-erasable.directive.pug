doctype html

label.input-label(*ngIf="label", [attr.for]="id") {{ label }}
.input-container
  input(#input, type="{{ type }}", placeholder="{{ placeholder }}",
    [attr.autocomplete]="disableAutocomplete ? 'off' : null",
    [tq-input-mask]="mask",
    [id]="id",
    [ngClass]="{ 'input-accessory' : isVisible() }",
    [(ngModel)]="inputValue",
    (blur)="onBlur($event)",
    (focus)="onFocus($event)",
    (keyup)="onKeyUp($event)")
  .input-container-ic((click)="onEraseClick($event)")
    span.mi.mi-clear.input-ic.input-ic--action([ngClass]="{ 'is-visible': isVisible() }")
